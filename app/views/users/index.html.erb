<section class="users-sectiony">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="well profile">
          <h3>User profile</h3>
          <% @users.each do |user| %>
            <%if current_user == user%>
              <div class="col-xs-12 col-sm-8">
                <h2>Name: <%= user.name %> </h2>
                <p><strong>Email: <%= user.email %> </p>
                </div>
                <div class="col-xs-12 divider text-center">
                  <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong><%=my_friends(user.id)%> </strong></h2>
                    <p><small>Friends</small></p>
                    <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Friends </button>
                  </div>
                  <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong><%=pending(user)%></strong></h2>
                    <p><small>Pending Requests</small></p>
                    <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Pending </button>
                  </div>
                  <div class="col-xs-12 col-sm-4 emphasis">
                    <button class="btn btn-info btn-block"><span class="fa fa-user"></span> <%= link_to 'My Profile',  user_path(user) %></button>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <h5 class="card-header">All Users</h5>
            <% @users.each do |user| %>
              <%if current_user != user%>
                <div class="card-body">
                  <h5 class="card-title">Name: <%= user.name %></h5>
                  <p class="card-text">Email: <%= user.email %></p>
                  <div class="card-btns">
                    <button class="btn btn-primary"><%= link_to 'View Profile',  user_path(user), class: 'profile-link' %></button>
                    <%= render partial: "friendbtns", object: @user = user %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
